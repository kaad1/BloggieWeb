@model List<BloggieWeb1.Models.Domain.BlogPost>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All BlogsPosts- Admin Funcionality</h1>
    </div>
</div>


<div class="container py-5">

    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Heading</td>
                    <td>Display Name</td>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogposts in Model)
                {
                    <tr>
                        <td>@blogposts.Id</td>
                        <td>@blogposts.Heading</td>
                        
                        

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1 class="text-danger ">No Tags Found</h1>
    }
</div>