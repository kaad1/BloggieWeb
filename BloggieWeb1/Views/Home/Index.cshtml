@model List<BloggieWeb1.Models.Domain.BlogPost>

@{
    ViewData["Title"] = "Home Page";
}

 <div class="container col-xxl-8 px-4 py-5 bg-light">
   <div class="row align-items-center g-5 py-5">
     <div class="col-12 col-lg-6">
         <h1 class="display-5 fw-bold lh-1 mb-3">
             Bloggie- The Dev Blog
         </h1>
         <p class="lead">
             Bloggie is the gome to coding blogs covering a vast rage of 
             topics like HTML, CSS, JavaScript, ASP NET, C#, Angular etc...
             Want to read the latest dev articles? Join thr bloggie app and 
             get weeklt blogs in your emai.
         </p>
     </div> 
     <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/3585000/pexels-photo-3585000.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" 
            alt="Alternate Text" class="d-block mx-lg-auto img-fluid " width="300"/>
     </div>
   </div>
 </div>


 <div class="container bg-light">
     <div class="row justify-content-center bg-light">
        <div class="col-6">
            @if(Model != null && Model.Any())
            {
                foreach(var blogPost in Model)
                {
                  <div class="mb-5 bg-light box-shadow">
                      <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading" class="mb-2 d-block img-fluid"  />
                  </div>

                    <h2 class="mb-4">@blogPost.Heading</h2>
                    <p class="mb-4">Author @blogPost.Author <br />
                        Published Date: @blogPost.PublishedDate.ToShortDateString()</p>

                    <p class="mb-4">
                        @foreach (var tag in blogPost.Tags)
                        {
                            <span class="badge bg-secondary me-1">@tag.Name</span>
                        }
                    </p>
                <a class="btn btn-dark mb-4"
                asp-controller="Blogs"  
                asp-area="" 
                asp-action="Index"
                 asp-route-urlHandle="@blogPost.UrlHandle" > Read More</a>
                }
            }

        </div>
     </div>
 </div>